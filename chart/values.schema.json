          "default": false,
          "title": "enabled",
          "type": "boolean"
        },
        "host": {
          "default": "",
          "title": "host",
          "type": "string"
        },
        "insecureSkipVerify": {
          "default": false,
          "title": "insecureSkipVerify",
          "type": "boolean"
        },
        "password": {
          "default": "",
          "title": "password",
          "type": "string"
        },
        "secretKeyRef": {
          "additionalProperties": false,
          "properties": {
            "name": {
              "default": "",
              "title": "name"
            }
          },
          "description": "Alternative to inlining values, secret must contain: AGENT_NAME, UPSTREAM_USER, UPSTREAM_PASSWORD \u0026 UPSTREAM_HOST",
          "title": "secretKeyRef"
        },
        "user": {
          "default": "",
          "title": "user",
          "type": "string"
        }
      },
