{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/flanksource/canary-checker/api/v1/exec-check",
  "$ref": "#/$defs/ExecCheck",
  "$defs": {
    "ExecCheck": {
      "properties": {
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "labels": {
          "$ref": "#/$defs/Labels"
        },
        "test": {
          "$ref": "#/$defs/TestTemplate"
        },
        "display": {
          "$ref": "#/$defs/Template"
        },
        "transform": {
          "$ref": "#/$defs/Template"
        },
        "script": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "script"
      ]
    },
    "Labels": {
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "Template": {
      "properties": {
        "template": {
          "type": "string"
        },
        "jsonPath": {
          "type": "string"
        },
        "expr": {
          "type": "string"
        },
        "javascript": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "TestTemplate": {
      "properties": {
        "template": {
          "type": "string"
        },
        "jsonPath": {
          "type": "string"
        },
        "expr": {
          "type": "string"
        },
        "javascript": {
          "type": "string"
        },
        "threshold": {
          "$ref": "#/$defs/TestThreshold"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "TestThreshold": {
      "properties": {
        "info": {
          "type": "string"
        },
        "low": {
          "type": "string"
        },
        "medium": {
          "type": "string"
        },
        "high": {
          "type": "string"
        },
        "critical": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}